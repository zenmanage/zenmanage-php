{
    "name": "zenmanage/zenmanage-php",
    "description": "Official PHP SDK for Zenmanage feature flags with local evaluation",
    "type": "library",
    "license": "MIT",
    "keywords": ["feature-flags", "feature-toggles", "zenmanage", "php"],
    "authors": [
        {
            "name": "Zenmanage",
            "email": "hello@zenmanage.com"
        }
    ],
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.0",
        "psr/log": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Zenmanage\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zenmanage\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyse src tests --level=9 ",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff --allow-risky=yes"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
